mixin icon(name,mod)
	if(mod)
		svg(class="svg-sprite-icon icon-" + name + ' ' + mod)
			use(xlink:href="static/images/svg/symbol/sprite.svg#" + name)
	else
		svg(class="svg-sprite-icon icon-" + name)
			use(xlink:href="static/images/svg/symbol/sprite.svg#" + name)
mixin image(cl,name,title)
	if(title)
		img(class=""+cl src="static/images/"+name title=""+title)
	else
		img(class=""+cl src="static/images/"+name title="image")